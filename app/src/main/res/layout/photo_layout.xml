<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/leftMargin"
    android:layout_marginRight="@dimen/rightMargin"
    android:layout_marginTop="@dimen/topMargin"
    android:layout_marginBottom="@dimen/bottomMargin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivChangePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add_blue" />
        <TextView
            android:layout_toLeftOf="@id/ivChangePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family Photo"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_pic" />

        <ProgressBar
            android:id="@+id/img_prg"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image"
            android:layout_alignRight="@+id/image"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp" />

    </RelativeLayout>

</LinearLayout>
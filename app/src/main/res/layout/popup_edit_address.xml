<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                style="@style/TBEditText"
                android:id="@+id/et_address1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Address 1"
                android:paddingBottom="7dp"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_address2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:hint="Address 2"
                android:paddingBottom="7dp"
                android:paddingLeft="11dp"
                android:paddingTop="7dp"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        style="@style/TBEditText"
                        android:id="@+id/et_city"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:paddingBottom="7dp"
                        android:paddingLeft="11dp"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_pincode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:hint="Pincode"
                        android:paddingBottom="7dp"
                        android:paddingLeft="11dp"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        style="@style/TBEditText"
                        android:id="@+id/et_state"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="State"
                        android:paddingBottom="7dp"
                        android:paddingLeft="11dp"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/group_country"
                        android:layout_width="fill_parent"
                        android:layout_height="34dp"
                        android:drawSelectorOnTop="true"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:background="@color/seperator_color" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bottom_button"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Update"
                    android:textColor="@color/view_color_blue"
                    android:textSize="19sp" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/separator_height"
                android:layout_height="match_parent"
                android:background="@color/seperator_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bottom_button"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Cancel"
                    android:textColor="@color/dark_gray"
                    android:textSize="19sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>

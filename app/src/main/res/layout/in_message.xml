<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:background="#00000000"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginRight="16dp"

    >
    <ImageView
        android:id="@+id/imgInTriangle"
        android:layout_marginRight="-5dp"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/in_triangle"/>
    <LinearLayout
        android:layout_toRightOf="@id/imgInTriangle"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:background="@drawable/message_background_in"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/tvInMessage"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />

        <TextView
            android:id="@+id/tvInTime"
            android:textSize="9sp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/leftMargin"
            android:text="11:23am"/>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/seperator_color" />

    <RelativeLayout
        android:id="@+id/rlNewslettersWrapper"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNewsletters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Newsletters"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNewsLettersCount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_circle_blue_border"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/view_color_blue"
                android:textSize="12sp"
                android:text="0"
                />

            <ImageView
                android:layout_marginLeft="@dimen/leftMargin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right_arrow"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/seperator_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/seperator_color" />

    <RelativeLayout
        android:id="@+id/rlEventsWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:text="Events"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tvEventsCounts"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_circle_blue_border"
                android:gravity="center_horizontal|center_vertical"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/view_color_blue"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/leftMargin"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/seperator_color" />
</LinearLayout>